<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="GreenDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/holo_green_light</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <item name="android:titleTextColor" tools:targetApi="m">@android:color/white</item>

    </style>

    <style name="RedDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <item name="android:titleTextColor" tools:targetApi="m">@android:color/white</item>


    </style>


</resources>
